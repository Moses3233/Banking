package com.myBank.main;

import java.util.Scanner;

public class bankAppMain {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
	
		int welcomeOption;
		
		System.out.println("Welcome to the Bank! Do you already have an account with us?");
		
		do {
			
		System.out.println("\nType \"1\" for yes or \"2\" for no.\nPress \"3\" to exit now");
		try{
			welcomeOption = Integer.parseInt(sc.nextLine()) ;
		}catch
		
		switch(welcomeOption) {
		case 1:
			System.out.println("This is to log into an existing account.");
			break;
			
		case 2:
			System.out.println("This is to create a new account.");
			break;
			
		case 3:
			System.out.println("Exiting... Have a good day.");
			System.exit(0);
			break;
			
		default:
			System.out.println("Not a valid option. Try again");
		
		}
		
		}while(welcomeOption!=3);
	}

}
